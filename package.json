{
  "name": "@bluecateng/nano-spring",
  "version": "1.0.0",
  "description": "Tiny implementation of spring animation",
  "license": "ISC",
  "main": "index.es6",
  "scripts": {
    "build:es5": "BABEL_ENV=es5 babel -o index.es5 src",
    "build:es6": "BABEL_ENV=es6 babel -o index.es6 src",
    "build": "npm run build:es5 && npm run build:es6",
    "test": "jest",
    "test-ci": "npm ci && jest --ci --silent --reporters=jest-junit",
    "prepack": "npm t && npm run build"
  },
  "keywords": [
    "spring",
    "nano"
  ],
  "files": [
    "index.es5",
    "index.es6"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.9.6",
    "babel-preset-minify": "^0.5.1",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " / "
  }
}
